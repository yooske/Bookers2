<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Event Mail</h1>
        <%= render 'layouts/errors', obj: @event %>
        <%= form_with model: @event, url: group_events_path(@group), method: :post, local: true do |f| %>
          <div class="form-group">
            <label for="title">Title</label>
            <%= f.text_field :title, class: "form-control event_title" %>
          </div>
          <div class="form-group">
            <label for="group_introduction">紹介文</label>
            <%= f.text_area :content, class: "form-control event_content" %>
          </div>
          <div class="form-group">
            <%= f.submit '送信', class: "btn btn-success float-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
