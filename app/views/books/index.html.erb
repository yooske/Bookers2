<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label>Title</label>
        <%= f.text_field :title %>
    </div>
    <div class="form-group">
    <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="form-group"><%= f.submit 'Create Book' %></div>
  <% end %>

<div class="col-md-8 offset-md-1">
  <h2>Book</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>user画像</td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
