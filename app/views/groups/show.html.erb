<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <%= render 'layouts/errors', obj: @book %>
    <div class="row">
      <%= render 'books/book', book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Group Detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>グループ名</th>
              <th>紹介文</th>
              <th>メンバー</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                  <%= image_tag @group.get_image(100, 100) %>
              </td>
              <td><%= link_to "#{@group.name}", group_path(@group), class: "group_#{@group}" %></td>
              <td><%= @group.introduction %></td>
              <td>
                <% @group.users.each do |member| %>
                  <%= member.name %><br>
                <% end %>
              </td>
              <% if current_user.id == @group.owner_id %>
                <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %></td>
              <% elsif @group.users.include?(current_user) %>
                <td><%= link_to 'Leave This Group', group_leave_path(@group), method: :delete, class: "btn btn-danger" %></td>
              <% else %>
                <td><%= link_to 'Join This Group', group_join_path(@group), class: "btn btn-success" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
