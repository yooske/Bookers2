<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Group</h1>
        <%= render 'layouts/errors', obj: @group %>
        <%= form_with model: @group, url: group_path(@group), method: :patch, local: true do |f| %>
          <div class="form-group">
            <label for="group_name">グループ名</label>
            <%= f.text_field :name, class: "form-control group_name" %>
          </div>
          <div class="form-group">
            <label for="group_introduction">紹介文</label>
            <%= f.text_area :introduction, class: "form-control group_introduction" %>
          </div>
          <div class="form-group">
            <label for="group_image">グループ画像</label><br>
            <%= f.file_field :image, class: "group_image" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update Group', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>