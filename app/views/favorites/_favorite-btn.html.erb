<% if book.favorited_by?(current_user) %>
  <td class="text-danger">
    <%= link_to book_favorites_path(book), method: :delete, local: false do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </td>
<% else %>
  <td class="text-primary">
    <%= link_to book_favorites_path(book), method: :post, local: false do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </td>
<% end %>